#home-image.row
  .large-12.columns
    %span.home-message
      Real estate matchmaking made easy

.row{:style => "background-color: #ddd; height: 50px;"}
  =form_tag '/users', :id => 'dealmaker-form', :method => :get do
    =hidden_field_tag :home_form, 'true'
    .large-5.columns
      %label I am
      =select_tag :dealmaker, options_for_select(dealmaker_options)
    .large-5.columns
      %label Looking for
      =select_tag :dealmaker_match, options_for_select(dealmaker_options)
    .large-2.columns
      =submit_tag "find dealmakers", :class => "button"
.row{:style => "background-color:#4a90e2; padding: 15px 15px 40px;"}
  %h3.value-proposition Real estate matchmaking made easy
  .large-4.columns
    .circle
      =image_tag('connections-gray.png', :style => "padding: 25px;")
    .value
      %span Grow your network, increase referrals and close deals faster.
  .large-4.columns
    .circle
      =image_tag('dealflow-gray.png')
    .value
      %span Find off-market properties
  .large-4.columns
    .circle
      =image_tag('dealflow-gray.png')
    .value
      %span Manage your leads.

