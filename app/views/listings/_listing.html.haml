.row
  .large-12.columns
    .listing[listing]
      .row
        .large-5.columns
          .feed-listing-image
            %img{:src => "http://placehold.it/400x300&text=[img]"}/

        .large-7.columns

          .feed-listing-body

            =link_to listing_path(listing) do
              %h4=listing.title
            .feed-listing-meta
              %span=listing.city
            .listing-description
              =listing.description
            .author{:style => "display: none;"}
              %p
                posted by
                =link_to listing.user.username, user_path(listing.user)
                %button message #{listing.user.username}
            %h4
              $#{listing.price}
            -if user_signed_in?
              =render :partial => 'lead_button', :locals => {listing:listing}
      .row
        .large-12.columns
          .feed-listing-number
            %label noi
            %span=listing.noi
          .feed-listing-number
            %label size
            %span=listing.units
          .feed-listing-number
            %label cap rate
            %span=listing.cap_rate
          .feed-listing-number
            %label arv
            %span=listing.arv