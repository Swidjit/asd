.row
  .large-12.columns
    .listing[listing]
      .row
        .large-5.columns
          .feed-listing-image
            %img{:src => "http://placehold.it/400x300&text=[img]"}/

        .large-7.columns

          .feed-listing-body

            %h4=listing.title
            .feed-listing-meta
              %span=listing.city
            .listing-description
              =listing.description
            .author{:style => "display: none;"}
              %p
                posted by
                =link_to listing.user.username, user_path(listing.user)
                %button message #{listing.user.username}
            %h4
              $#{listing.price}
            -if user_signed_in?
              .listing-buttons
                =link_to generate_lead_listing_path(listing), :method => "post", :remote => "true" do
                  %button get lead
                  %span.token_count (#{current_user.tokens} tokens available)
      .row
        .large-12.columns
          .feed-listing-number
            %label noi
            %span=listing.noi
          .feed-listing-number
            %label size
            %span=listing.units
          .feed-listing-number
            %label cap rate
            %span=listing.cap_rate
          .feed-listing-number
            %label arv
            %span=listing.arv