.row{:style => "border: 1px solid gray; margin-bottom: 10px;"}
  .large-12.columns{:style => "padding: 0px;"}
    .listing[listing]
      .row
        .large-5.columns
          .feed-listing-image
            -if listing.images.size > 0
              =image_tag listing.images[0].pic.url(:medium)
            -else
              %img{:src => "http://placehold.it/400x300&text=[img]"}/
            .token-count
              2 tokens
        .large-7.columns

          .feed-listing-body

            =link_to listing_path(listing) do
              .feed-listing-title
                =listing.title
            .feed-listing-meta
              .city=listing.city
              .timestamp
                =time_ago_in_words(listing.created_at)
                ago

            .feed-listing-price
              #{number_to_currency(listing.price, :precision => 0)}
            =link_to listing_path(listing) do
              -if user_signed_in? && current_user.has_lead(listing.id)
                %button.small.lead-button{:style => "margin-top: 8px;"} view lead
              -else
                %button.small.lead-button{:style => "margin-top: 8px;"} get lead
      %hr
      .row
        .large-12.columns
          .feed-listing-number
            %label NOI
            %span
              #{number_to_currency(listing.noi, :precision => 0)}
          .feed-listing-number
            %label Status
            %span
              #{listing.status}
          .feed-listing-number
            %label Cap Rate
            %span
              #{listing.cap_rate}%
          .feed-listing-number
            %label ARV
            %span
              #{number_to_currency(listing.arv, :precision => 0)}