:javascript
  $(document).on('ready page:load', function(){
    latlng = new google.maps.LatLng("#{@listing.latitude}","#{@listing.longitude}");
    options = {
      language: 'en-GB',
      center: latlng,
      zoom: 14
    };
    map = new google.maps.Map(document.getElementById('map-canvas'), options);
    marker = new google.maps.Marker({
      position:latlng,
      map: map,
      title: "#{@listing.title}"
    });
  });