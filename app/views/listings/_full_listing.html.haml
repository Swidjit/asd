.row
  .large-12.columns
    .listing-header
      %h3=@listing.title
      =link_to edit_listing_path(@listing) do
        %button edit
      =link_to listing_path(@listing), :method=>:delete do
        %button delete
      %button{:onclick=>"$('#manage-photos').show()"} manage photos

.row
  .large-7.columns
    .listing-body
      .hidden.author{:style => "display: none;"}
        %p
          posted by
          =link_to @listing.user.username, user_path(@listing.user)
          %button message #{@listing.user.username}
      #map-canvas.hidden{:style => "height: 200px; width: 200px;"}
      =render :partial => 'map_js'
      %p
        $#{@listing.price}
      -#-unless current_user == @listing.user
      =render :partial => 'lead_button', :locals => {listing:@listing}
      %label property type
      =@listing.property_type
      %label # units
      =@listing.units
      %label status
      =@listing.status
      .hidden
        %label property description
        =@listing.description
        %label address
        =@listing.address
