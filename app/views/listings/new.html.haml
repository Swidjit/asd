#form{:style=>"position:relative; margin-top:0px;"}
  =form_for @listing do |f|
    =f.hidden_field :user_id, :value => current_user.id
    .meal-section
      %h5 new listing
      .row
        .large-6.columns
          %label title
          =f.text_field :title
          %label description
          =f.text_field :description
          %label price
          =f.number_field :price
          %label ROI
          =f.number_field :noi, :step => 'any'
          %label cap rate
          =f.number_field :cap_rate, :step => 'any'
          %label ARV
          =f.number_field :arv, :step => 'any'
          %label # units
          =f.number_field :units, :step => 1
          %label property type
          =f.select(:property_type, ['1-4 units','5-10 units'], {}, { :class => 'my_style_class' })
          %label status
          =f.select(:property_type, ['distressed','under construction'], {}, { :class => 'my_style_class' })

        .large-6.columns
          %label address
          =f.text_field :address, :value => current_user.address.nil? ? "" : current_user.address, :placeholder => "street address for your meal"
          %label city
          =f.text_field :city
          %label country
          =f.text_field :country


    =f.file_field :pic
    =f.submit "post listing", :class => "button"
