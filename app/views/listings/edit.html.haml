= javascript_include_tag "https://maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=places"
#map-canvas
=form_for @listing, url: listing_path(@listing), :method => :patch do |f|
  .row
    .large-6.columns
      %label title
      =f.text_field :title
      %label description
      =f.text_field :description
      %label price
      =f.number_field :price
      %label ROI
      =f.number_field :noi, :step => 'any'
      %label cap rate
      =f.number_field :cap_rate, :step => 'any'
      %label ARV
      =f.number_field :arv, :step => 'any'
      %label # units
      =f.number_field :units, :step => 1
      %label property type
      =f.select(:property_type, ['','1-4 units','5-10 units', '20+ units','Commercial','Office','Retail','Shopping Center','Hotel','Mixed-Use','Vacant Lot','Land','Other'], {}, { :class => 'my_style_class' })
      %label status
      =f.select(:status, ['','distressed','under construction'], {}, { :class => 'my_style_class' })

    .large-6.columns
      %label address
      =f.text_field :address, :class => 'address'
      =f.hidden_field :latlng
      =f.submit "save listing"

:javascript
  $(document).on('ready page:load', function(){
    $("#s3-uploader").S3Uploader();
  });
:javascript
  $(document).on('ready page:load', function(){

    initialize();

  });

  var initialize;
  initialize = function() {
    var autocomplete, input, map, options;
    input = $('.address');
    options = {
      language: 'en-GB',
      center: new google.maps.LatLng(42.446877, -76.505407),
      zoom: 11
    };
    autocomplete = new google.maps.places.Autocomplete(input[0], options);
    map = new google.maps.Map(document.getElementById('map-canvas'), options);
    google.maps.event.addListener(autocomplete, 'place_changed', function() {
      var place = autocomplete.getPlace();
      console.log(place.geometry.location);
      $('#listing_latlng').attr("value",place.geometry.location.k+","+place.geometry.location.B);

    })

    return google.maps.event.addListener(map, 'bounds_changed', function() {
      autocomplete.bindTo('bounds', map);
    });
  };
