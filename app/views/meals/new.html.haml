#form{:style=>"position:relative; margin-top:0px;"}
  =form_for @meal do |f|
    =f.hidden_field :user_id, :value => current_user.id
    .meal-section
      %h5 meal basics (optional)
      .row
        .large-6.columns
          %label title
          =f.text_field :title, :value => "Meal by @#{current_user.username}"
          %label capacity
          dine in:
          =f.number_field :dine_in_count, :value=>4, :min => 2, :max => 20
          take out:
          =f.number_field :take_out_count, :value=>0, :min => 0, :max => 20
          %label cost (# credits)
          =f.number_field :cost, :value=>1, :min => 1, :max => 4
        .large-6.columns
          %label address
          =f.text_field :address, :value => current_user.address.nil? ? "" : current_user.address, :placeholder => "street address for your meal"
          %label time/date
          =f.text_field :start_time, :class => "datetimepicker", :placeholder => "start time"
    .meal-section
      %h5 meal details (optional)
      .row
        .large-6.columns
          %label describe your meal (optional)
          =f.text_area :description, :placeholder => "optionally describe your meal"
        .large-6.columns
          %label list your dishes (optional)
          =f.fields_for :dishes do |f1|
            .new-dish
              =f1.text_field :title, :class => "dish-title", :placeholder => "dish title"
              =f1.text_field :description, :class => "dish-description", :placeholder => "dish description"
    =f.submit "post meal", :class => "button"
:javascript
  $(document).on('ready page:load', function(){
    $('.datetimepicker').datetimepicker();



  });