      =select_tag :property_type, options_for_select(["property type","1-4 units", "5 â€“ 10 units", "20 units plus", "Commercial", "Office", "Retail", "Shopping Center","Hotel","Mixed-Use", "Vacant Lot", "Land", "Other"]), id: 'filter'
