
#profile_section
  #profile_img
    =link_to user_path(current_user) do
      =image_tag("profile.png", :size=>"26x26")
  #expanded_user_menu
    #user-menu
      %ul
        %div{:style => "color: yellow; padding: 0px 10px; text-align:center;"}
          logged in as
          =current_user.username
      %ul
        =link_to user_path(current_user) do
          %li
            =image_tag('profile-light-blue.svg',:size=>'22x22')
            your profile
      %ul
        =link_to user_leads_path(current_user) do
          %li
            =image_tag('profile-light-blue.svg',:size=>'22x22')
            your leads
      %ul
        =link_to user_conversations_path(current_user) do
          %li
            =image_tag('profile-light-blue.svg',:size=>'22x22')
            your inbox
      %ul
        = link_to edit_user_path(current_user) do
          %li
            =image_tag('settings-light-blue.svg',:size=>'22x22')
            settings
        = link_to destroy_user_session_path, :method => 'delete' do
          %li
            =image_tag('logout-light-blue.svg',:size=>'22x22')
            logout



